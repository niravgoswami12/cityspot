<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardBackgroundColor="@color/global_bg_front"
	app:cardCornerRadius="@dimen/card_corner_radius"
	app:cardElevation="@dimen/global_elevation_2">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="@dimen/global_spacing_16"
			android:paddingStart="@dimen/global_spacing_16"
			android:paddingEnd="@dimen/global_spacing_16"
			android:textAppearance="@style/TextAppearance.CitySpot.Headline"
			android:fontFamily="sans-serif-light"
			android:text="@string/poi_detail_info_title" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="@dimen/global_spacing_8"
			android:paddingBottom="@dimen/global_spacing_8"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:id="@+id/poi_detail_info_intro"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/global_spacing_48"
				android:paddingStart="@dimen/poi_detail_info_item_padding"
				android:paddingEnd="@dimen/global_spacing_16"
				android:paddingTop="@dimen/global_spacing_8"
				android:paddingBottom="@dimen/global_spacing_8"
				android:gravity="center_vertical"
				android:drawablePadding="@dimen/poi_detail_info_item_padding"
				android:textAppearance="@style/TextAppearance.CitySpot.Body1"
				android:textColor="@color/global_text_secondary"
				android:clickable="true"
				android:focusable="true"
				app:drawableStartCompat="@drawable/ic_card_intro" />

			<TextView
				android:id="@+id/poi_detail_info_address"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/global_spacing_48"
				android:paddingStart="@dimen/poi_detail_info_item_padding"
				android:paddingEnd="@dimen/global_spacing_16"
				android:paddingTop="@dimen/global_spacing_8"
				android:paddingBottom="@dimen/global_spacing_8"
				android:gravity="center_vertical"
				android:drawablePadding="@dimen/poi_detail_info_item_padding"
				android:background="@drawable/selector_clickable_item_bg"
				android:textAppearance="@style/TextAppearance.CitySpot.Body1"
				android:textColor="@color/global_text_secondary"
				android:maxLines="1"
				android:ellipsize="end"
				android:clickable="true"
				android:focusable="true"
				app:drawableStartCompat="@drawable/ic_card_address" />

			<TextView
				android:id="@+id/poi_detail_info_distance"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/global_spacing_48"
				android:paddingStart="@dimen/poi_detail_info_item_padding"
				android:paddingEnd="@dimen/global_spacing_16"
				android:paddingTop="@dimen/global_spacing_8"
				android:paddingBottom="@dimen/global_spacing_8"
				android:gravity="center_vertical"
				android:drawablePadding="@dimen/poi_detail_info_item_padding"
				android:background="@drawable/selector_clickable_item_bg"
				android:textAppearance="@style/TextAppearance.CitySpot.Body1"
				android:textColor="@color/global_text_secondary"
				android:maxLines="1"
				android:ellipsize="end"
				android:clickable="true"
				android:focusable="true"
				app:drawableStartCompat="@drawable/ic_card_distance" />

			<TextView
				android:id="@+id/poi_detail_info_link"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/global_spacing_48"
				android:paddingStart="@dimen/poi_detail_info_item_padding"
				android:paddingEnd="@dimen/global_spacing_16"
				android:paddingTop="@dimen/global_spacing_8"
				android:paddingBottom="@dimen/global_spacing_8"
				android:gravity="center_vertical"
				android:drawablePadding="@dimen/poi_detail_info_item_padding"
				android:background="@drawable/selector_clickable_item_bg"
				android:textAppearance="@style/TextAppearance.CitySpot.Body1"
				android:textColor="@color/global_text_secondary"
				android:maxLines="1"
				android:ellipsize="end"
				android:clickable="true"
				android:focusable="true"
				app:drawableStartCompat="@drawable/ic_card_link" />

			<TextView
				android:id="@+id/poi_detail_info_phone"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/global_spacing_48"
				android:paddingStart="@dimen/poi_detail_info_item_padding"
				android:paddingEnd="@dimen/global_spacing_16"
				android:paddingTop="@dimen/global_spacing_8"
				android:paddingBottom="@dimen/global_spacing_8"
				android:gravity="center_vertical"
				android:drawablePadding="@dimen/poi_detail_info_item_padding"
				android:background="@drawable/selector_clickable_item_bg"
				android:textAppearance="@style/TextAppearance.CitySpot.Body1"
				android:textColor="@color/global_text_secondary"
				android:maxLines="1"
				android:ellipsize="end"
				android:clickable="true"
				android:focusable="true"
				app:drawableStartCompat="@drawable/ic_card_phone" />

			<TextView
				android:id="@+id/poi_detail_info_email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/global_spacing_48"
				android:paddingStart="@dimen/poi_detail_info_item_padding"
				android:paddingEnd="@dimen/global_spacing_16"
				android:paddingTop="@dimen/global_spacing_8"
				android:paddingBottom="@dimen/global_spacing_8"
				android:gravity="center_vertical"
				android:drawablePadding="@dimen/poi_detail_info_item_padding"
				android:background="@drawable/selector_clickable_item_bg"
				android:textAppearance="@style/TextAppearance.CitySpot.Body1"
				android:textColor="@color/global_text_secondary"
				android:maxLines="1"
				android:ellipsize="end"
				android:clickable="true"
				android:focusable="true"
				app:drawableStartCompat="@drawable/ic_card_email" />

		</LinearLayout>
	</LinearLayout>
</androidx.cardview.widget.CardView>
